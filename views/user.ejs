<html>
    <head>
        <title>User Details</title>
        <link rel="stylesheet" href="/styles/style.css">
        <style>
            
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td>User ID</td>
                <td>User Email Address</td>
                <td>First Name</td>
                <td>Last Name</td>
            </tr>
            <% userDetails.forEach(function(row) { %>
                <tr>
                    <td><%= row.user_id %></td>
                    <td><%= row.email %></td>
                    <td><%= row.first_name %></td>
                    <td><%= row.last_name %></td>
                </tr>
            <% }); %>
        </table>
        <img src="/images/image.png" alt="">

        <!--Sign Up Form-->
        <form action="" method="post" class="register-form">
            <!-- Email input field -->
            <div class="register-form">
                <label for="email">Email: </label>
                <input type="email" name="email" placeholder="Email" id="email" required>
            </div>

            <!-- First name input field -->
            <div class="register-form">
                <label for="first_name">First name: </label>
                <input type="text" name="first_name" placeholder="First name" id="first_name" required>
            </div>

            <!-- Last name input field -->
            <div class="register-form">
                <label for="last_name">Last name: </label>
                <input type="text" name="last_name" placeholder="Last name" id="last_name" required>
            </div>

            <!-- Password input field -->
            <div class="register-form">
                <label for="password">Password: </label>
                <input type="password" name="password" placeholder="Passoword" id="password" required>
            </div>

            <!-- Submit button -->
            <div class="register-form">
                <input type="submit" value="Sign Up">
            </div>
        </form>
    </body>
</html>