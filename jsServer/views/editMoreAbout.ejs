<html>
    <head>
        <title>Form</title>
        <link rel="stylesheet" href="/styles/editSkill.css">
    </head>
    <body>
        <h1>Edit Education</h1>

        <form action="" method="post" class="edit-skill-form">
            <div class="edit-skill-form">
                <label for="more_about">More About You: </label>
                <!-- Text area for the content of the article -->
                <textarea name="more_about" id="more_about" required><%= typeof aboutData != 'undefined' && aboutData.more_about || ''%></textarea>
            </div> 

            <div class="edit-skill-form">
                <!-- Submit button to update the article -->
                <input type="submit" value="Update">
            </div>
        </form>   
    </body>
</html>